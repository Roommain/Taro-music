
.play {
  position: relative;
  height: 100vh;
  background-color: #000000;
}
.bg-img {
  position: absolute;
  width: 100%;
  height: 100vh;
  opacity: 0.2;
}
.components {
  width: 100%;
  height: 100%;
  position: relative;
  text-align: center;
  color: white;
}
.music-img {
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
  -webkit-animation: 22s linear infinite;
          animation: 22s linear infinite;
}
.music-name,
.singer-name {
  padding: 20rpx 0;
  overflow: hidden;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  white-space: nowrap;
}
.lyric {
  position: relative;
  top: 50rpx;
  padding: 20rpx 0;
}
.slider {
  position: relative;
  top: 100rpx;
}
.slider .start-time {
  position: absolute;
  left: 30rpx;
  top: 18rpx;
}
.slider .slider-width {
  width: 80%;
  position: absolute;
  left: 80rpx;
}
.slider .end-time {
  position: absolute;
  right: 30rpx;
  top: 18rpx;
  z-index: 10;
}
.play-button {
  position: relative;
  top: 240rpx;
}
.type {
  position: absolute;
  left: 100rpx;
}
.prev {
  position: absolute;
  left: 220rpx;
}
.play-btn {
  position: absolute;
  left: 340rpx;
}
.next {
  position: absolute;
  left: 460rpx;
}
.heart {
  position: absolute;
  left: 580rpx;
}
.rotate {
  -webkit-animation: rotateAnimation 22s linear infinite;
          animation: rotateAnimation 22s linear infinite;
}
.rotate-pause {
  -webkit-animation-play-state: paused;
          animation-play-state: paused;
}
@-webkit-keyframes rotateAnimation {
  0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
  }
}
@keyframes rotateAnimation {
  0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
  }
}
.music-play {
  position: absolute;
  bottom: 160rpx;
  width: 100%;
  height: 200rpx;
}
