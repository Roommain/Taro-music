
.list {
  position: relative;
  width: 100%;
  height: 200rpx;
  margin: 15rpx 0;
  border-bottom: 1rpx solid rgba(197, 193, 193, 0.5);
}
.singerImg {
  width: 180rpx;
  height: 180rpx;
  border-radius: 30rpx;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.left {
  position: absolute;
  left: 20rpx;
}
.right {
  position: absolute;
  left: 230rpx;
  font-size: 32rpx;
}
.name {
  overflow: hidden;
  width: 500rpx;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  color: rgba(197, 193, 193, 0.8);
}
.recommendedImg {
  margin: 0 auto;
  width: 220rpx;
  height: 220rpx;
}
.recommended-img {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}
.singer-name {
  font-size: 24rpx;
  margin-left: 30rpx;
}
.recommended-name {
  width: 220rpx;
  margin: 0 20rpx;
  white-space: normal;
  font-size: 24rpx;
  text-align: center;
}
